<h1>All Cities</h1>

<% @cities.each do |city| %>
  <h3>
    <a href="/cities/<%= city.id %>"><%= city.name %></a>
    Date Added: <%= city.created_at %>
  </h3>
  <%= link_to 'Update', "/cities/#{city.id}/edit", method: :get%>
  <%= button_to 'delete', "/cities/#{city.id}", method: :delete %>
<% end %>

