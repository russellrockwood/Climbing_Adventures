<%= link_to 'Back', "/cities" %>

<h1><%= @city.name %></h1>
<%= link_to "#{@city.name} Hostels", "/cities/#{@city.id}/hostels" %>
<p>Travel Advisory: <%= @city.travel_advisory %></p>
<p>Population: <%= @city.population %></p>
<p>Number of Hostels: <%= @city.hostels.count %></p>
<p>Date Added: <%= @city.created_at %></p>
<p>Updated: <%= @city.updated_at %></p>
<br>
<a href="/cities/<%= @city.id %>/edit">Update</a><br>

<%= link_to "Delete #{@city.name}", "/cities/#{@city.id}", method: 'delete' %>
